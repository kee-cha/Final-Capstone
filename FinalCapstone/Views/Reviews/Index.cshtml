@model IEnumerable<FinalCapstone.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <div class="row">
        <table class="table">

            <tr>
                <th class="col-md-2">
                    @Html.DisplayNameFor(model => model.Client.ApplicationUser.UserName)
                </th>
                </th>
                <th class="col-md-10">
                    @Html.DisplayNameFor(model => model.Comment)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Client.ApplicationUser.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Index", new { id = item.Id, isTrue = true }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
@if (User.IsInRole("Client") == true)
{
    if (ViewBag.IsTrue == null)
    {
        <p>
            @{Html.RenderAction("Create", new { id = ViewBag.MtId });}
        </p>
    }
    if (ViewBag.IsTrue != null)
    {
        <p>
            @{Html.RenderAction("Edit", new { id = ViewBag.MtId });}
        </p>
    }

}