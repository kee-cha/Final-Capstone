@model FinalCapstone.Models.MTAppointViewModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ClientPref.Id)
        @Html.HiddenFor(model =>model.MassageTherapist.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.ClientPref.AppointmentDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ClientPref.AppointmentDate, new { @type = "date", @class = "form-control datepicker"})
                @Html.ValidationMessageFor(model => model.ClientPref.AppointmentDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Make Appointment" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
